{
	"name": "vanilla/garden-db",
	"description": "A light but powerful database abstraction layer.",
	"license": "MIT",
	"authors": [
		{
			"name": "Todd Burry",
			"email": "todd@vanillaforums.com"
		}
	],
	"require": {
		"php": ">=7.2",
		"ext-pdo": "*",
		"vanilla/garden-schema": "^2.0"
	},
	"require-dev": {
		"phpunit/phpunit": "~8.0",
		"bobthecow/faker": "dev-master"
	},
	"config": {
		"platform": {
			"php": "7.2"
		}
	},
	"autoload": {
		"psr-4": {
			"Garden\\Db\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Garden\\Db\\Tests\\": "tests"
		}
	}
}
